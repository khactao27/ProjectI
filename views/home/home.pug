doctype html
head
  title Trang chủ - KTee - Phone
  meta(charset='utf-8')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css', integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js', integrity='sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW', crossorigin='anonymous')
  style.
    h4.intro::{
      content: url(/images/account.png);
    }
header(style="margin: 10px;")
  nav.navbar.navbar-light.bg-light
    .container-fluid
      a.navbar-brand(href='https://www.instagram.com/tao_duongkhac/')
        img.d-inline-block.align-top(src='/images/instagram.jpg', alt='', width='50', height='50')
        |      Intagram
      if idUser
        a.nav-link(href='/')
          h4(class='intro')=user.fullname
        a.nav-link(href='/auth/login') Đăng xuất
      else
        a.nav-link(href='/auth/login') Đăng nhập
  #carouselExampleIndicators.carousel.slide(data-bs-ride='carousel')
    ol.carousel-indicators
      li.active(data-bs-target='#carouselExampleIndicators', data-bs-slide-to='0')
      li(data-bs-target='#carouselExampleIndicators', data-bs-slide-to='1')
      li(data-bs-target='#carouselExampleIndicators', data-bs-slide-to='2')
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src='/images/iphonebanner.png', alt='...', style="height:400px")
      .carousel-item
        img.d-block.w-100(src='/images/banner1.png', alt='...', style="height:400px")
      .carousel-item
        img.d-block.w-100(src='/images/thegioididong.png', alt='...', style="height:400px")
    a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-bs-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.visually-hidden Previous
    a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-bs-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.visually-hidden Next
  div
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/') Trang chủ 
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
          each val in brands
            span
              img(src=val.logoTH, alt=val.tenTH, style='width:40px;height:30px;')
              a.nav-link(href='/products?id='+val.maTH)
               b=val.tenTH
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='search', placeholder='Tên điện thoại',name="name", aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Tìm kiếm
        a.nav-link(href='/cart')
          img(src='/images/Cart.png', alt="Giỏ hàng", style='width:50px;height:50px;')

section
  .container-fluid
    .row
      div(style='width: 100%;margin-top:30px', class="container")
        .row.row-cols-5
          each val in products
            .card(style='width: 25%;padding:5px;margin-bottom:5px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);')
                img.card-img-top(src=val.hinhanhSP, alt=val.tenSP)
                .card-body
                h5(class="card-title",style="text-align:center;")=val.tenSP
                p.card-text='Giá: '+ val.giaSP + " VNĐ"
                p='Sẵn có: '+ val.sanco +' máy'
                button.btn.btn-primary(onclick=`document.location='/products/'+${val.maSP}`) Xem chi ti&#x1EBF;t


