doctype html
head
  title Home - TeePhone
  meta(charset='utf-8')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css', integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2', crossorigin='anonymous')
header
  #carouselExampleCaptions.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-target='#carouselExampleCaptions', data-slide-to='0')
      li(data-target='#carouselExampleCaptions', data-slide-to='1')
      li(data-target='#carouselExampleCaptions', data-slide-to='2')
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src='/images/banner/bannerhome.png', alt='Banner home')
        .carousel-caption.d-none.d-md-block
      .carousel-item
        img.d-block.w-100(src='/images/banner/flashsale.png', alt='Flash sale')
        .carousel-caption.d-none.d-md-block
      .carousel-item
        img.d-block.h-20.w-100(src='...', alt='...')
        .carousel-caption.d-none.d-md-block
    a.carousel-control-prev(href='#carouselExampleCaptions', role='button', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselExampleCaptions', role='button', data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
  div
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/login') Đăng nhập 
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
          each val in brands
            li.nav-item
                a.nav-link(href='#')=val.tenTH
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='search', placeholder='Tên điện thoại',name="name", aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Tìm kiếm
section
  .container-fluid
    .row
      div(style='width: 25%;')
        
      div(style='width: 75%;margin-top:30px', class="container")
        .row.row-cols-4
          each val in products
            .card(style='width: 25%;padding:5px;margin-bottom:5px;')
                img.card-img-top(src=val.hinhanhSP, alt=val.tenSP)
                .card-body
                h5(class="card-title",style="text-align:center;")=val.tenSP
                p.card-text=val.giaSP + " VNĐ"
                form(action='/product', method='GET')
                  button.btn.btn-primary(type='submit', name='id', value=val.id) Xem chi ti&#x1EBF;t

