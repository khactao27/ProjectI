doctype html
head
  title Admin - Panel
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1', crossorigin='anonymous')
  style.
    * {
    box-sizing: border-box;
    }
    body {
    font-family: Arial;
    margin: 0;
    }
    .navbar {
    display: flex;
    background-color: #333;
    }
    .navbar a {
    color: white;
    padding: 14px 20px;
    text-decoration: none;
    text-align: center;
    }
    .navbar a:hover {
    background-color: #ddd;
    color: black;
    }
    .row {
    display: flex;
    flex-wrap: wrap;
    }
    .side {
    flex: 25%;
    background-color: #f1f1f1;
    padding: 20px;
    }
    .main {
    flex: 75%;
    background-color: white;
    padding: 20px;
    }
    .fakeimg {
    background-color: #aaa;
    width: 100%;
    padding: 20px;
    }
    @media screen and (max-width: 700px) {
    .row,
    .navbar {
    flex-direction: column;
    }
    }
.navbar
  a(href='https://www.instagram.com/tao_duongkhac/')
   img(src="/images/instagram.jpg", alt="insta", style="width: 30px; height: 30px;")
   | Instagram
  a(href='#')
   img(src="/images/account.png", alt="Account img", style="width: 30px; height: 30px;")
   | Admin - Tee
  a(href='/auth/login') Đăng xuất
.row
  .side
    .list-group
      button.list-group-item.list-group-item-action.active(type='button', aria-current='true')
        | Trang ch&#x1EE7;
      button.list-group-item.list-group-item-action(type='button', onclick="document.location='/admin/brands'")
        |  Th&#x1B0;&#x1A1;ng hi&#x1EC7;u
      button.list-group-item.list-group-item-action(type='button', onclick="document.location='/admin/products'")
        | S&#x1EA3;n ph&#x1EA9;m
      button.list-group-item.list-group-item-action(type='button', onclick="document.location='/admin/bills'")
        | &Dstrok;&#x1A1;n h&agrave;ng
      button.list-group-item.list-group-item-action(type='button', onclick="document.location='/admin/accounts'")
        | T&agrave;i kho&#x1EA3;n
  .main
    table.table
      thead
        tr
          th(scope='col') M&atilde; th&#x1B0;&#x1A1;ng hi&#x1EC7;u
          th(scope='col') Logo Th&#x1B0;&#x1A1;ng hi&#x1EC7;u
          th(scope='col') T&ecirc;n th&#x1B0;&#x1A1;ng hi&#x1EC7;u
          th(scope='col')
      tbody
        each brand in brands
          tr
            th(scope='row')=brand.maTH
            td
              img(src=brand.logoTH,style="width:50px;height:50px", alt=brand.tenTH)
            td=brand.tenTH
            td
                button.btn.btn-primary(onclick=`document.location='/admin/brands/'+${brand.maTH}`, value='#') Xem chi ti&#x1EBF;t
